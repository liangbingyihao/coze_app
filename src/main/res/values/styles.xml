<resources
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="GGTheme" parent="ChatSDKTheme">
<!--        <item name="android:background">@color/white</item>-->
<!--        <item name="gradientPrimary">@drawable/gradient_primary</item>-->
<!--        <item name="gradientStartColor">#99ffe8e8</item>-->
<!--        <item name="gradientEndColor">#ffffff</item>-->
<!--        <item name="gradientAngle">90</item>-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">#2D8659</item>

        <item name="colorAccent">#339966</item>
        <item name="colorControlNormal">@color/text_primary</item>

        <item name="outcomingDefaultBubbleColor">#2D8659</item>
        <item name="outcomingDefaultBubblePressedColor">#2D8659</item>

<!--        <item name="actionBarBackgroundColor">@color/white</item>-->
<!--        <item name="actionBarTextColor">@color/black</item>-->

    </style>

    <style name="HistoryDateText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#888888</item> <!-- 更不显眼的灰色 -->
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="HistorySessionText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/selected_item_bg</item>
    </style>

    <style name="ExploreButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">8dp</item>
        <item name="strokeColor">#E7E7E7</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/item_text_normal</item>
        <item name="rippleColor">#20000000</item>
        <item name="android:gravity">start</item>
        <item name="layout_alignSelf">flex_start</item>
    </style>

    <style name="Widget.MyApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <!-- 基础样式继承自Material3 -->
        <!-- 文字样式 -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>

        <!-- 背景控制 -->
        <item name="backgroundTint">#FAFAFA</item> <!-- 浅灰背景 -->
        <item name="cornerRadius">4dp</item> <!-- 微小圆角 -->

        <!-- 边框控制 -->
        <item name="strokeColor">#E0E0E0</item> <!-- 更浅的边框灰 -->
        <item name="strokeWidth">1dp</item>

        <!-- 图标控制 -->
        <item name="iconTint">#333333</item>
        <item name="iconSize">20dp</item>
    </style>
    <style name="InconspicuousClickableText">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>