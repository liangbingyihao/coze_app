<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    app:alignItems="flex_end"
    app:flexDirection="column"
    app:flexWrap="wrap">

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="246dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bubble_bible_image"
        android:orientation="vertical"
        app:layout_alignSelf="flex_start">
        <!--        android:background="@drawable/bubble_bible_image"-->

        <siyamed.shapeimageview.PorterShapeImageView
            android:id="@id/image"
            android:layout_width="185dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:siShape="@drawable/shape_image_bubble"
            app:siSquare="false" />
        <!--        app:siShape="?outcomingBubbleDrawable"-->
        <!--        app:siShape="@drawable/shape_incoming_image_bubble"-->
        <!--        <siyamed.shapeimageview.PorterShapeImageView-->

        <TextView
            android:id="@+id/bible"
            android:layout_width="185dp"
            android:layout_height="142dp"
            android:layout_gravity="bottom"
            android:background="#FAFAFA"
            android:ellipsize="end"
            android:gravity="start"
            android:lineSpacingExtra="6dp"
            android:maxLines="6"
            android:padding="8dp"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- 底部行（时间 + 操作菜单） -->
    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:alignItems="center"
        app:flexDirection="row"
        app:justifyContent="flex_start"
        app:layout_alignSelf="flex_start">

        <ImageView
            android:id="@+id/btn_download"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/dashed_border"
            android:padding="2dp"
            android:src="@mipmap/ic_download_black" />

    </com.google.android.flexbox.FlexboxLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/explore1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:lineSpacingExtra="8dp"
        android:padding="8dp"
        android:stateListAnimator="@null"
        android:textColor="@color/item_text_normal"
        android:textSize="17sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        app:elevation="0dp"
        app:layout_alignSelf="flex_start"
        app:rippleColor="#20000000"
        app:strokeColor="#E7E7E7"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/explore2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:lineSpacingExtra="8dp"
        android:padding="8dp"
        android:stateListAnimator="@null"
        android:textColor="@color/item_text_normal"
        android:textSize="17sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        app:elevation="0dp"
        app:layout_alignSelf="flex_start"
        app:rippleColor="#20000000"
        app:strokeColor="#E7E7E7"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/explore3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="start"
        android:lineSpacingExtra="8dp"
        android:padding="8dp"
        android:stateListAnimator="@null"
        android:textColor="@color/item_text_normal"
        android:textSize="17sp"
        app:backgroundTint="@color/white"
        app:cornerRadius="10dp"
        app:elevation="0dp"
        app:layout_alignSelf="flex_start"
        app:rippleColor="#20000000"
        app:strokeColor="#E7E7E7"
        app:strokeWidth="1dp" />

</LinearLayout>